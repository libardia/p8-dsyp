output = {
    text = "",
}


function output_draw()
    if state == "menu" then
        local box_size = (font_height+1)*menu_output_lines + text_padding * 2
        print(output.text, 1+text_padding, input_box_y - box_size+1+text_padding, 7)
    else
        local box_size = (font_height+1)*game_output_lines + text_padding * 2
        print(output.text, 1+text_padding, input_box_y - box_size+1+text_padding, 7)
        rect(0, input_box_y-box_size, 127, input_box_y)
    end
end
